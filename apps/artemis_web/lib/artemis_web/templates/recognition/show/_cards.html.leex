<%= unless @recognitions == :loading do %>
  <%= for recognition <- @recognitions do %>
    <%=
      live_component(
        @socket,
        ArtemisWeb.RecognitionCardComponent,
        id: recognition.id,
        comments: @comments,
        reactions: @reactions,
        recognition: recognition,
        user: @user
      )
    %>
  <% end %>
<% end %>
