<div id="content-header">
  <header>
    <h1>
      Event Instances
      <span class="subheading"><%= @event_template.title %></span>
    </h1>

    <div class="actions">
      <%= if has?(@conn, "event-answers:update") do %>
        <%= action "Edit", to: Routes.event_instance_path(@conn, :edit, @event_template, @today), color: "green" %>
      <% end %>
      <%= if has?(@conn, "event-answers:update") do %>
        <%= action "View Today", to: Routes.event_instance_path(@conn, :show, @event_template, @today), color: "blue" %>
      <% end %>
    </div>
  </header>

  <%=
    secondary_navigation_items = [
      [
        label: "Overview",
        path: &Routes.event_instance_path(&1, :index, @event_template),
        path_match_type: :exact,
        verify: &has?(&1, "event-answers:list")
      ]
    ]

    render_secondary_navigation(
      @conn,
      current_user(@conn),
      secondary_navigation_items
    )
  %>
</div>
