<div id="content-header">
  <header>
    <h1>
      <%= @event_template.title %>
      <span class="subheading"><%= @date %></span>
    </h1>

    <div class="actions">
      <%= if has?(@conn, "event-answers:update") do %>
        <%= action "Edit", to: Routes.event_instance_path(@conn, :edit, @event_template, @date), color: "green" %>
      <% end %>
    </div>
  </header>
</div>
