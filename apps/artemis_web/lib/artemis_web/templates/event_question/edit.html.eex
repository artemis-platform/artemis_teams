<div id="content-header">
  <header>
    <h1>Edit Event Question</h1>
  </header>
</div>

<div id="content-navigation">
  <%= render_breadcrumbs @conn %>
  <%= render_presence @conn %>
</div>

<div id="content">
  <%= render_flash_notifications @conn %>
  <%= render_event_log_notifications @conn, "EventQuestion", @event_question.id %>

  <section>

    <%=
      form_assigns =
        assigns
        |> Map.put(:action, Routes.event_question_path(@conn, :update, @event_question.event_template, @event_question))
        |> Map.put(:event_template, @event_template)

      render "form.html", form_assigns
    %>
  </section>
</div>
